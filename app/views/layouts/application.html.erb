<!DOCTYPE html>
<html>
  <head>
    <title>Wholives</title>
    <%= csrf_meta_tags %>
    <%= Gon::Base.render_data %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <%= include_gon(:watch => true, :init => true) %>
  	<!-- navbar -->
  	<nav class="navbar navbar-default">
  		<div class="container-fluid">
	  		<div class="navbar-header">
	  			<a class="navbar-brand" href="/">WhoLives</a>
	  		</div>
	  		<ul class="nav navbar-nav">
		  		<li class="active"><a href="/">Home</a></li>
		  		<% if !login? %>
		  		<li><%= link_to "Login", log_in_path %></li>
		  		<% else %>
		  		<li><%= link_to "Profile", user_path(current_user)%></li>
          <li><%= link_to "All Games", games_path %></li>
          <li><%= link_to "New Game", new_game_path %></li>
		  		<li><%= link_to "Sign Out", log_out_path, method: :delete %></li>
		  		<% end %>
	  		</ul>
	  	</div>
  	</nav>
    <!-- content -->
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
