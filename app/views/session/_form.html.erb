<%= form_for :session do |f| %>

<div class="form-group">
	<%= f.label :email, "Email" %>
	<%= f.email_field :email, class: "form-control" %>
</div>

<div class="form-group">
	<%= f.label :password, "Password" %>
	<%= f.password_field :password, class: "form-control" %>
</div>

<%= f.submit "Log In", class: "btn btn-danger" %>

<% end %>